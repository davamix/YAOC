<UserControl x:Class="Yaoc.Views.KnowledgeView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:Yaoc.Views"
			 xmlns:uc="clr-namespace:Yaoc.Controls"
			 xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:behaviours="http://schemas.microsoft.com/xaml/behaviors"
			 mc:Ignorable="d">

	<Grid Margin="24">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0"
				   Text="Knowledge"
				   Style="{StaticResource MaterialDesignHeadline4TextBlock}" />

		<Separator Grid.Row="1"
				   Grid.Column="0"
				   Grid.ColumnSpan="2"
				   Margin="0,5,0,15" />

		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Grid Grid.Column="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
						   Text="Collections"
						   Style="{StaticResource MaterialDesignHeadline5TextBlock}" />

				<!-- Collections -->
				<ListView Grid.Row="1"
						  x:Name="collectionList"
						  ItemsSource="{Binding Collections}"
						  SelectedItem="{Binding SelectedCollection}"
						  Margin="0,12,12,0">
					<ListView.Resources>
						<Style TargetType="ListViewItem">
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="ListViewItem">
										<Border Margin="0"
												Padding="0" />
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</ListView.Resources>
					<ListView.ItemContainerStyle>
						<Style TargetType="ListViewItem"
							   BasedOn="{StaticResource MaterialDesignListBoxItem}">
							<Setter Property="HorizontalContentAlignment"
									Value="Stretch" />
							<Setter Property="Padding"
									Value="0" />
						</Style>
					</ListView.ItemContainerStyle>
					<ListView.ItemTemplate>
						<DataTemplate>
							<uc:ListViewItemCollection>
								<behaviours:Interaction.Triggers>
									<behaviours:EventTrigger EventName="CollectionNameChanged">
										<behaviours:InvokeCommandAction Command="{Binding DataContext.ChangeCollectionNameCommand, ElementName=collectionList}"
																		EventArgsParameterPath="CollectionName"
																		PassEventArgsToCommand="True" />
									</behaviours:EventTrigger>
								</behaviours:Interaction.Triggers>
							</uc:ListViewItemCollection>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>

				<Button Grid.Row="2"
						Content="{md:PackIcon Kind=Bookshelf, Size=26}"
						Style="{StaticResource MaterialDesignFlatMidBgButton}"
						VerticalAlignment="Bottom"
						Command="{Binding CreateCollectionCommand}">
					<Button.ToolTip>
						<ToolTip>
							<TextBlock Text="Create new collection" />
						</ToolTip>
					</Button.ToolTip>
				</Button>

			</Grid>

			<GridSplitter Grid.Column="0"
						  Grid.Row="0"
						  Grid.RowSpan="2"
						  VerticalAlignment="Stretch"
						  HorizontalAlignment="Right"
						  Background="#FFD8D8D8"
						  ShowsPreview="True"
						  Width="3" />

			<!-- Documents -->
			<StackPanel Grid.Column="1">
				<TextBlock Text="Documents"
						   Style="{StaticResource MaterialDesignHeadline5TextBlock}" />

				<ListView x:Name="documentsList"
						  ItemsSource="{Binding Documents}"
						  Margin="0,12,0,0">
					<ListView.Resources>
						<Style TargetType="ListViewItem">
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="ListViewItem">
										<Border Margin="0"
												Padding="0" />
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</ListView.Resources>
					<ListView.ItemContainerStyle>
						<Style TargetType="ListViewItem"
							   BasedOn="{StaticResource MaterialDesignListBoxItem}">
							<Setter Property="HorizontalContentAlignment"
									Value="Stretch" />
							<Setter Property="Padding"
									Value="0" />
						</Style>
					</ListView.ItemContainerStyle>
					<ListView.ItemTemplate>
						<DataTemplate>
							<uc:ListViewItemCollectionDocument />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</StackPanel>
		</Grid>


	</Grid>
</UserControl>

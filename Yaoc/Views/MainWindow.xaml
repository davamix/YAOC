<Window x:Class="Yaoc.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:behaviours="http://schemas.microsoft.com/xaml/behaviors"
		xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
		xmlns:views="clr-namespace:Yaoc.Views"
		xmlns:vm="clr-namespace:Yaoc.ViewModels"
		TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
		Background="{DynamicResource MaterialDesign.Brush.Background}"
		TextElement.FontWeight="Medium"
		TextElement.FontSize="14"
		FontFamily="{md:MaterialDesignFont}"
		mc:Ignorable="d"
		Style="{StaticResource MaterialDesignWindow}"
		WindowStartupLocation="CenterScreen"
		Title="YAOC - Yet Another Ollama Client"
		Height="768"
		Width="1366">

	<md:Card>
		<TabControl md:NavigationRailAssist.ShowSelectionBackground="True"
					SnapsToDevicePixels="True"
					Style="{StaticResource MaterialDesignNavigationRailTabControl}"
					TabStripPlacement="Left">
			<!-- Conversations -->
			<TabItem>
				<TabItem.Header>
					<StackPanel Width="Auto"
								Height="Auto">
						<md:PackIcon Kind="Folder"
									 Width="24"
									 Height="24"
									 HorizontalAlignment="Center" />
						<TextBlock Text="Chats"
								   HorizontalAlignment="Center" />
					</StackPanel>
				</TabItem.Header>

				<views:ConversationsView />
			</TabItem>

			<!-- Models -->
			<TabItem>
				<TabItem.Header>
					<StackPanel Width="Auto"
								Height="Auto">
						<md:PackIcon Kind="Cube"
									 Width="24"
									 Height="24"
									 HorizontalAlignment="Center" />
						<TextBlock Text="Models"
								   HorizontalAlignment="Center" />
					</StackPanel>
				</TabItem.Header>

				<TextBlock Text="Models"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center" />
			</TabItem>

			<!-- Settings -->
			<TabItem>
				<TabItem.Header>
					<StackPanel Width="Auto"
								Height="Auto">
						<md:PackIcon Kind="Cog"
									 Width="24"
									 Height="24"
									 HorizontalAlignment="Center" />
						<TextBlock Text="Settings"
								   HorizontalAlignment="Center" />
					</StackPanel>
				</TabItem.Header>

				<views:SettingsView />
			</TabItem>
		</TabControl>
	</md:Card>

</Window>
